
# Configurações de Produção - Sistema de Gestão

# Supabase (obrigatório)
VITE_SUPABASE_URL=https://seu-projeto.supabase.co
VITE_SUPABASE_ANON_KEY=sua-chave-anonima-aqui

# Aplicação
VITE_APP_NAME="Sistema de Gestão"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENV="production"

# URLs
VITE_API_BASE_URL=https://api.seudominio.com
VITE_APP_URL=https://app.seudominio.com

# Monitoramento (opcional)
VITE_SENTRY_DSN=sua-url-sentry-aqui
VITE_ANALYTICS_ID=seu-id-analytics-aqui

# Recursos
VITE_ENABLE_CACHE=true
VITE_ENABLE_ERROR_MONITORING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Configurações de Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Timeouts (em milissegundos)
VITE_API_TIMEOUT=30000
VITE_CACHE_TTL=300000
